{
  "name": "w3filecoin",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "author": "Vasco Santos <santos.vasco10@gmail.com>",
  "license": "Apache-2.0 OR MIT",
  "scripts": {
    "start": "sst start",
    "build": "sst build",
    "deploy": "sst deploy --outputs-file .test-env.json",
    "remove": "sst remove",
    "console": "sst console",
    "lint": "tsc && eslint '**/*.js'",
    "clean": "rm -rf dist node_modules package-lock.json ./*/{.cache,dist,node_modules}",
    "test": "npm test -w data -w consumer",
    "test-integration": "ava --verbose --serial --timeout=300s test/*.test.js"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.226.0",
    "@serverless-stack/cli": "^1.18.4",
    "@serverless-stack/resources": "^1.18.4",
    "@tsconfig/node16": "^1.0.3",
    "@types/git-rev-sync": "^2.0.0",
    "@types/node": "^18.11.18",
    "@web-std/fetch": "^4.1.0",
    "ava": "^4.3.3",
    "dotenv": "^16.0.3",
    "aws-cdk-lib": "2.50.0",
    "git-rev-sync": "^3.0.2",
    "hd-scripts": "^3.0.2",
    "lint-staged": "^13.0.3",
    "p-wait-for": "^5.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@serverless-stack/node": "^1.18.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/hd-scripts/eslint/index.js"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "unicorn/explicit-length-check": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-await-expression-member": "off",
      "unicorn/no-zero-fractions": "off",
      "no-console": "off"
    }
  },
  "workspaces": [
    "api",
    "data",
    "redis",
    "consumer"
  ]
}